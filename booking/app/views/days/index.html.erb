<h2>All Days</h2>
<table class = "table">
  <tr>
    <th>Date</th>
    <th>Group</th>
    <th>Hours Scheduled</th>
    <th>Actions</th>
  </tr>
  <tbody>
<% @days.each do |day| %>
  <tr>
    <td><%= link_to day.date, edit_hours_path(day) %></td>
    <td><% if day.visit == nil %>
      <%= "No Visit" %>
    <% else %>
      <%= link_to day.visit.guest.name, visit_path(day.visit) %>
    <% end %></td>
    <td><%= day.calculate_hours %></td>
    <td><%= link_to "Edit", edit_hours_path(day) %> |
      <%= link_to "Delete", day, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
  </tbody>
</table>
