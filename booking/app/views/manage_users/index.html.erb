<div class = "col-md-6 col-md-offset-3">
  <h3>All Users</h3>
  <% @allUsers.each do |u| %>
    <div class = "row">
      <div class = "col-md-4"><%= u.email %></div>
      <div class = "col-md-2"><%= link_to "Delete", u, method: :delete, data: { confirm: "Are you sure?" }  %> |
                              <%= link_to "Edit", edit_user_path(u) %></div>
    </div>
  <% end %>
  <div class = "row spacer"></div>
  <div class = "row">
    <%= link_to "Add a new user", new_user_path %>
  </div>
</div>
