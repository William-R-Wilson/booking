<div class = "col-md-6 col-md-offset-3">
  <h3>All Price Tiers</h3>
  <% @prices.each do |p| %>
    <div class = "row">
      <div class = "col-md-4">
        <%= p.tier %>
      </div>
      <div class = "col-md-2">
        <%= link_to "Edit", edit_price_path(p) %> |
        <%= link_to "Delete", p, method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
  <div class = "row spacer"></div>
  <div class = "row">
    <%= link_to "Add a new price tier", new_price_path %>
  </div>
</div>
