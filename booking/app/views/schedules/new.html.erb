<h2>Create a new schedule for <%= @schedule.employee.full_name %>
  <%= formatted_date @schedule.day.date %></h2>
  <div class = "row">
    <div class = "col-md-4 col-md-offset-4">
      <%= form_for @schedule do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class = "form-group">
          <%= f.label "Start Time" %><%= f.time_field :start_time %>
        </div>
        <div class = "form-group">
          <%= f.label "End Time" %><%= f.time_field :end_time %>
        <div class = "form-group">
          <%= f.hidden_field :employee_id %><%= f.hidden_field :day_id %>
        </div>
        <%= f.submit "Submit!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
