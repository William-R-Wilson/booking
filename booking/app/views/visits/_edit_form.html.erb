<div class = "row">
  <div class = "col-md-4 col-md-offset-4">
    <%= form_for @visit do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <ul>
        <%= f.fields_for :days do |days_form| %>
          <li>
            <%= days_form.label :breakfast %>
            <%= days_form.number_field :breakfast %>

            <%= days_form.label :lunch %>
            <%= days_form.number_field :dinner %>

            <%= days_form.label :dinner %>
            <%= days_form.number_field :dinner %>
          </li>
          <% end %>
        </ul>



      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
